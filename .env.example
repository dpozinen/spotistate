# Required Environment Variables
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
POSTGRES_PASSWORD=your_secure_password_here

# Optional Database Configuration
POSTGRES_USER=postgres
POSTGRES_DB=spotistate
POSTGRES_PORT=5432

# Optional Application Ports
APP_PORT=80
API_PORT=8080

# Advanced Spring Boot Configuration (Optional)
# You can override any Spring Boot property using environment variables
# Examples:

# Database Schema Management
# SPRING_JPA_HIBERNATE_DDL_AUTO=update  # Options: create, create-drop, update, validate

# Logging Levels  
# LOGGING_LEVEL_COM_SPOTISTATE=DEBUG    # Application logs
# LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG  # Security logs
# SPRING_JPA_SHOW_SQL=true              # Show SQL queries

# Server Configuration
# SERVER_PORT=8080                      # Change internal server port

# Custom redirect URI (if different from default)
# SPOTIFY_REDIRECT_URI=http://yourdomain.com:8080/api/auth/callback

# Management Endpoints
# MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus

# Performance Tuning
# SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=20
# SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
